{
    "manifest_version": 3,
    "description": "A simple tab manager extension",
    "name": "Smart Tab Manager",
    "version": "1.0.0",
    "permissions": [
        "bookmarks",
        "storage",
        "tabs",
        "tabGroups",
        "declarativeNetRequest"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png"
        },
        "default_title": "Smart Tab Manager"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "options_page": "analytics.html",
    "web_accessible_resources": [
        {
            "resources": [
                "blocked.html",
                "debug.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}